@model odev2.Models.Ogrenci

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Öğrenci Güncelleme";
}

<main role="main" class="pb-3">
    <div class="container">
        <div>
            <br />
        </div>

        <h1 style="text-align: center;">ÖĞRENCİ BİLGİLERİNİ GÜNCELLEME</h1>

        <div class="row">
            <div class="col-md-4">
                <form asp-action="Guncelle">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="OgrenciNo" />

                    <div class="form-group">
                        <label asp-for="Ad" class="control-label">Ad</label>
                        <input asp-for="Ad" class="form-control" />
                        <span asp-validation-for="Ad" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Soyad" class="control-label">Soyad</label>
                        <input asp-for="Soyad" class="form-control" />
                        <span asp-validation-for="Soyad" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Sinif" class="control-label">Sınıf</label>
                        <input asp-for="Sinif" class="form-control" />
                        <span asp-validation-for="Sinif" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="DersTanimi" class="control-label">Ders Tanımı</label>
                        <input asp-for="DersTanimi" class="form-control" />
                        <span asp-validation-for="DersTanimi" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Kredi" class="control-label">Kredi</label>
                        <input asp-for="Kredi" class="form-control" />
                        <span asp-validation-for="Kredi" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="SinavTarihi" class="control-label">Sınav Tarihi</label>
                        <input asp-for="SinavTarihi" class="form-control" type="datetime-local" />
                        <span asp-validation-for="SinavTarihi" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="VizeNotu" class="control-label">Vize Notu</label>
                        <input asp-for="VizeNotu" class="form-control" />
                        <span asp-validation-for="VizeNotu" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="FinalNotu" class="control-label">Final Notu</label>
                        <input asp-for="FinalNotu" class="form-control" />
                        <span asp-validation-for="FinalNotu" class="text-danger"></span>
                    </div>

                    <div>
                        <br />
                    </div>

                    <input type="submit" value="Güncelle" class="btn btn-primary btn-block" />
                    <a asp-action="Listele" class="btn btn-secondary">İptal</a>
                </form>
            </div>
        </div>
    </div>
</main>
